# Test the use of specialization constants to set the workgroup size.

MODULE spec-constant-workgroupsize.spvasm
ENTRY spec-constant-workgroupsize

BUFFER x 16 FILL INT32 0
BUFFER y 16 FILL INT32 0
BUFFER z 16 FILL INT32 0

DESCRIPTOR_SET 0 0 0 x
DESCRIPTOR_SET 0 1 0 y
DESCRIPTOR_SET 0 2 0 z

# Default WorkgroupSize (2,1,3)
DISPATCH 1 1 1
DUMP INT32 x
DUMP INT32 y
DUMP INT32 z
# CHECK: Buffer 'x' (16 bytes):
# CHECK:   x[0] = 1
# CHECK:   x[1] = 1
# CHECK:   x[2] = 0
# CHECK:   x[3] = 0
# CHECK: Buffer 'y' (16 bytes):
# CHECK:   y[0] = 1
# CHECK:   y[1] = 0
# CHECK:   y[2] = 0
# CHECK:   y[3] = 0
# CHECK: Buffer 'z' (16 bytes):
# CHECK:   z[0] = 1
# CHECK:   z[1] = 1
# CHECK:   z[2] = 1
# CHECK:   z[3] = 0

# Set to (4,3,1)
SPECIALIZE 0 INT32 3
SPECIALIZE 1 INT32 2
SPECIALIZE 2 INT32 4
DISPATCH 1 1 1
DUMP INT32 x
DUMP INT32 y
DUMP INT32 z
# CHECK: Buffer 'x' (16 bytes):
# CHECK:   x[0] = 1
# CHECK:   x[1] = 1
# CHECK:   x[2] = 1
# CHECK:   x[3] = 0
# CHECK: Buffer 'y' (16 bytes):
# CHECK:   y[0] = 1
# CHECK:   y[1] = 1
# CHECK:   y[2] = 0
# CHECK:   y[3] = 0
# CHECK: Buffer 'z' (16 bytes):
# CHECK:   z[0] = 1
# CHECK:   z[1] = 1
# CHECK:   z[2] = 1
# CHECK:   z[3] = 1
